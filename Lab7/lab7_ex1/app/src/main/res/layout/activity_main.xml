<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/OpenWebButton"
        android:layout_width="143dp"
        android:layout_height="64dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="123dp"
        android:text="Open web button"
        app:layout_constraintBottom_toTopOf="@+id/openCamerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openCamerButton"
        android:layout_width="143dp"
        android:layout_height="73dp"
        android:layout_marginStart="134dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="108dp"
        android:text="Open camera"
        app:layout_constraintBottom_toTopOf="@+id/openSMSButtton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OpenWebButton" />

    <Button
        android:id="@+id/openSMSButtton"
        android:layout_width="143dp"
        android:layout_height="70dp"
        android:layout_marginStart="134dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="249dp"
        android:text="Open SMS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openCamerButton" />
</androidx.constraintlayout.widget.ConstraintLayout>